## alert.rules ##

# Alert for any instance that is unreachable for >5 minutes.
ALERT cpu_high
  IF node_cpu{job="node-exporter",mode="user"} > 1000
  FOR 10s
  LABELS { severity = "page", service = "node" }
  ANNOTATIONS {
    summary = "cpu high",
    description = "job {{$labels.job}} cpu high."
  }

ALERT nginx_connection
  IF nginx_connections_current {state="active"} > 5
  FOR 10s
  LABELS { severity = "page", service = "nginx" }
  ANNOTATIONS {
    summary = "test high",
    description = "job {{$labels.job}} on {{$labels.instance}} connection high."
  }
